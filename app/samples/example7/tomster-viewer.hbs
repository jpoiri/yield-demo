<div class="panel panel-default">
    {{#if hasBlock}}
        <div class="panel-heading">{{@heading}}</div>

        {{yield (hash tomster=(component "tomster" theme=theme clickAction=(action "randomizeTomsters")))}}

    {{else}}
        <div class="panel-heading">{{@heading}}</div>
        
        <Tomster @theme={{@theme}} />

    {{/if}}
</div>